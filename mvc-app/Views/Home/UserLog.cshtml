@model string[]
@{
    ViewData["Title"] = "User log";
}

<h2 class="text-center mb-3">Kiểm tra log thuê bao</h2>

<div class="container w-75">
    <form method="post" asp-action="UserLog" asp-controller="Home" class="row mt-3">
        <div class="col-6">
            <label class="form-label">Nhập username</label>
            <input name= "user" class="form-control" /> 
        </div>

        <div class="col-3">
            <label class="form-label">Ngày bắt đầu</label>
            <input name="sday" type="date" class="form-control" />
        </div>

        <div class="col-3">
            <label class="form-label">Ngày kết thúc</label>
            <input name="eday" type="date" class="form-control" />
        </div>

        <div class="col-12 mt-3">
            <button class="btn btn-primary" type="submit">Xác nhận</button>
        </div>
    </form>

    <div id="response">
        @if (Model != null)
        {
        <h3 style="margin-top: 5px;">Log List</h3>
        <h4><strong>User: </strong>@ViewData["User"]</h4>
            <ul>
                @foreach (var item in @Model){
                    <li style="margin-bottom: 5px;">@item</li>
                };
            </ul>
        }
    </div>
</div>
